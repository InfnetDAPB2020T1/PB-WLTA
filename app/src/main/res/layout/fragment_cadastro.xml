<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade_login"
    tools:context=".Fragment.CadastroFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="30dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="30dp" />

        <TextView
            android:id="@+id/textTituloCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Novo Cadastro"
            android:textColor="@color/boxTextLogin"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textTituloCadastro">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textoEmailCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textoEmail"
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <EditText
                    android:id="@+id/boxEmailCadastro"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Insira seu e-mail"
                    android:inputType=""
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <TextView
                    android:id="@+id/textoSenhaCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/textoSenha"
                    android:textColor="@color/boxTextLogin" />

                <EditText
                    android:id="@+id/boxSenhaCadastro"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Insira sua senha"
                    android:inputType="textPassword"
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <TextView
                    android:id="@+id/textNomeCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Nome"
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <EditText
                    android:id="@+id/boxNomeCadastro"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Nome"
                    android:inputType="textPersonName"
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <TextView
                    android:id="@+id/textSobrenomeCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Sobrenoime"
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <EditText
                    android:id="@+id/boxSobrenomeCadastro"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Sobrenome"
                    android:inputType="textPersonName"
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <TextView
                    android:id="@+id/textApelidoCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Apelido"
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <EditText
                    android:id="@+id/boxApelidoCadastro"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Apelido"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textEstadoCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Estado"
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <EditText
                    android:id="@+id/boxEstadoCadastro"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Estado"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textCPFCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="CPF"
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <EditText
                    android:id="@+id/boxCpf"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="CPF"
                    android:inputType="textPersonName"
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <TextView
                    android:id="@+id/textDDDCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DDD"
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <EditText
                    android:id="@+id/boxDDDCadastro"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:hint="DDD"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textTelefoneCadastro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefone"
                    android:textColor="@color/boxTextLogin"
                    android:textColorLink="@color/boxTextLogin" />

                <EditText
                    android:id="@+id/boxTelefoneCadastro"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:hint="Telefone"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/btnCadastrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:background="#FF5F17D3"
                    android:text="Cadastrar "
                    android:textColor="@color/boxTextLogin" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>